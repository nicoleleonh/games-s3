<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rules</th>
      <th>Cover image</th>
      <th>Pieces images</th>
      <th>Rules (pdf)</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= game.rules%></td>
        
        <td><%= image_tag game.cover_image.variant(resize: "100x100", type: :grayscale) %></td>  
        <td>
          <% game.pieces_images.each do |img|%>  
            <%= image_tag img.variant(resize: "100x100", type: :grayscale) %> 
          <% end %>      
        </td>    
        <td><%= link_to 'pdf', game.pdf_rules %></td>          
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
